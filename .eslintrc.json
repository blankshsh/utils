{
    "root": true,
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "plugins": ["html"],
    "rules": {
        "indent": ["error", 2, {
            "SwitchCase": 1
        }],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-console": ["error"]
    },
    "globals":{
        "document": true,
        "localStorage": true,
        "window": true
    },
    "import/no-amd": 0,
    "import/nop-dynamic-require": 0
}